{
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "vue",
    "go",
    "json",
    "typescript",
    "javascript",
    "css",
    "markdown",
    "dart"
  ],
  "markdownlint.config":{
    "no-bare-urls": false,
    "line_length": false,
    "no-inline-html": {
      "allowed_elements": [ "img" ]
    }
  },
  "cSpell.userWords": [
    "bigzhu",
    "vuejs"
  ],
  // vuejs auto format config
  "vetur.format.defaultFormatterOptions": {
    "prettier": {
      "singleQuote": true, 
      "semi": false, //no need semicolon
      "trailingComma": "none",
      "tabWidth": 2
    }
  },

  // coc-spell-checker
  "cSpell.ignoreWords": [
    "vetur", 
    "vuejs", 
    "markdownlint"
  ]
}
